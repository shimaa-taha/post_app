<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="4dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#20000000" /> <!-- Light black for shadow -->
        </shape>
    </item>

    <!-- Main background with border radius -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@android:color/white" /> <!-- Or your preferred color -->
            <stroke
                android:width="1dp"
                android:color="#10000000" /> <!-- Optional subtle border -->
        </shape>
    </item>
</layer-list>